<h3>
  Edit <%= @branch_product.product.name %>
</h3>

<%= simple_form_for @branch_product do |f| %>
  <p>
    <%= f.label 'Category' %>
    <%= f.input :category, label: false, input_html: { class: "form-control" } %>
  </p>
  
  <p>
    <%= f.label 'Price' %>
    <%= f.input :price, label: false, input_html: { class: "form-control" } %>
  </p>

  <p style="float:right">
    <%= f.submit "Submit" %>
  </p>
<% end %>
