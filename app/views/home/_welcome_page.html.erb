<h3>welcome '<%= @user.username %>'</h3><br>

<%= simple_form_for :branch_user, url: user_branch_path( @user ), method: 'post' do |f| %>
  <%= f.label 'Please select your administrative branch' %><br>
  
  <%= f.collection_radio_buttons :branch_id, Branch.all, :id, :name, :item_wrapper_class => 'checkbox_container' %><br>
  
  <%= f.submit 'Save' %>
<% end %>
