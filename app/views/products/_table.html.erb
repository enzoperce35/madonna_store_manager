<table class = 'table'>

  <caption id='caption'>
    Products
    <hr>
  </caption>
  
  <thead>
    <tr>
      <th>
        Product
        <%= link_to '[ ' "\u{ 002B }" ' ]'.encode( 'utf-8' ), new_product_path, method: 'get' %>
      </th>
      
      <th>Price</th>
      
      <th>Cost</th>
      
      <th>Net</th>
    </tr>
  </thead>
  
  <%# list of all products %>
  <% @products.each do | product | %>
    
    <tbody>
      <tr>
        <td>
          <%= link_to product.name, product_path( product, complete_item: complete_product_data_values?( product ) ), class: compliance_class_of( product ), method: 'get' %>
        </td>

        <td>
          <%= price_of( product ) %>
        </td>

        <td>
          <%= cost_of( product ) %>
        </td>
        
        <td>
          <%= net_of( product ) %>
        </td>
      </tr>
    </tbody>
  <% end %>
</table>
