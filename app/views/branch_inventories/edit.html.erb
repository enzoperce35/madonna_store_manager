<h3>
  Edit <%= @branch_item.inventory_item.name %>
</h3>

<%= simple_form_for @branch_item do |f| %>
  <p>
    <%= f.label 'Stock' %>
    <%= f.input :inventory_stock, label: false, input_html: { class: "form-control" } %>
  </p>

  <p style="float:right">
    <%= f.submit "Submit" %>
  </p>
<% end %>
